{{#section "head"}}
    <link href="/goals-manager.css" rel="stylesheet" />
    <script src="/goals-manager.mjs" type="module"></script>
{{/section}}

{{!-- modal form for adding new goal --}}
<form class="d-none position-fixed top-50 start-50 translate-middle p-3 border bg-light" id="newGoalForm" name="newGoalForm">
    <div class="mb-3">
        <div class="d-flex justify-content-between">
            <label for="newGoalTitle" class="form-label">Title</label>
            <div class="form-check form-switch">
                <input class="form-check-input"
                    id="newGoalPrivacy"
                    name="isPrivate"
                    value="true"
                    type="checkbox"
                    role="switch"
                />
                <label class="form-check-label" for="newGoalPrivacy">Private</label>
            </div>
        </div>
        <input type="text" class="form-control" id="newGoalTitle" name="title" minlength="1"/>
    </div>
    <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-sm btn-danger shadow" id="newGoalFormCancelBtn">Cancel</button>
        <button type="submit" class="btn btn-primary shadow" id="addNewGoalBtn">Add Goal</button>
    </div>
</form>

{{!-- modal form for adding new milestone --}}
<form class="d-none position-fixed top-50 start-50 translate-middle p-3 border bg-light" id="newMilestoneForm" name="newMilestoneForm">
    <div class="mb-3">
        <label for="newMilestoneTitle" class="form-label">Title</label>
        <input type="text" class="form-control" id="newMilestoneTitle" name="title" minlength="1"/>
    </div>
    <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-sm btn-danger shadow" id="newMilestoneFormCancelBtn">Cancel</button>
        <button type="submit" class="btn btn-primary shadow" id="addNewMilestoneBtn">Add Milestone</button>
    </div>
</form>

<h1 class="text-center text-decoration-underline">Goals Manager</h1>

<div class="container-fluid">
    {{!-- root row --}}
    <div class="row">

        {{!-- column of stacked goals and milestones create/edit/delete options to right of navbar --}}
        <main class="col">

            {{!-- root row of goal and milestone create/edit/delete options --}}
            <div class="row">

                {{!-- Goals/Milestones header row --}}
                <div class="row">
                    <div class="col offset-1">
                        <div class="d-flex justify-content-around align-items-center">
                            <h2 class="h2">Goals:</h2>
                            <button class="btn btn-primary btn-lg shadow mb-2" id="addGoalBtn" type="button">Add</button>
                        </div>
                    </div>

                    <div class="col">
                        <div class="d-flex justify-content-around align-items-center">
                            <h2 class="h2">Milestones:</h2>
                            <button class="d-none btn btn-primary btn-lg shadow mb-2" id="addMilestoneBtn" type="button">Add</button>
                        </div>
                    </div>
                </div>

                {{!-- Goals/Milestones create/edit/delete row --}}
                <form class="row">
                    {{!-- column of goal create/edit/delete options --}}
                    <section class="col-7">
                        {{#each userData.goals as |goal|}}
                            {{>goal-row goal}}
                        {{/each}}
                    </section>

                    {{!-- column of milestone create/edit/delete options --}}
                    <section class="col-5">
                        {{#each userData.goals as |goal|}}
                            {{>milestones-div goal}}
                        {{/each}}
                    </section>
                </form>

            </div>

        </main>

    </div>
</div>
