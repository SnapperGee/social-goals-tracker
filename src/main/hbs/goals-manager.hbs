{{#section "head"}}
    <link href="/default.css" rel="stylesheet" />
    <script src="/goals-manager.mjs" type="module"></script>
{{/section}}

<h1 class="text-center">Goals Manager</h1>

<div class="container-fluid">

    {{!-- root row --}}
    <div class="row">

        <nav class="col-1 bg-primary" id="navBarCol">
            <p>Navbar</p>
        </nav>

        <div class="col" id="goalsAndMilestoneCol">

            {{!-- Goals row --}}
            <div class="row align-items-center" id="goalsRow">

                <div class="col" id="goalsCol">
                    <form>

                        <div class="row align-items-center">

                            <div class="row">

                                <div class="col offset-2">
                                    <h2 class="text-center">Goals</h2>
                                </div>

                                <div class="col">
                                    <h2 class="text-center">Milestones</h2>
                                </div>

                            </div>

                            <div class="row align-items-center">

                                <div class="col-1">
                                    <button class="btn btn-primary btn-lg shadow mb-3" type="button">Add Goal</button>
                                </div>

                                {{!-- Update btn col --}}
                                <div class="col-1">
                                    <button class="btn btn-secondary shadow" type="submit" disabled>Update</button>
                                </div>

                                {{!-- Goal col --}}
                                <div class="col">
                                    <ol class="list-group">
                                        <li class="list-group-item">

                                            <div class="d-flex justify-content-around align-items-center mb-2">
                                                <div>
                                                    <input class="form-check-input me-1" type="checkbox" value="" id="goalAccomplishedCheckbox">
                                                    <label class="form-check-label" for="goalAccomplishedCheckbox">Accomplished</label>
                                                </div>

                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                                                    <label class="form-check-label" for="flexSwitchCheckDefault">Private</label>
                                                </div>

                                                <button type="button" class="btn btn-primary btn-sm active" id="mileStonesToggle" data-bs-toggle="button" aria-pressed="true">Milestones</button>
                                            </div>

                                            <label for="goalTitle" class="form-label d-none">Goal Title</label>
                                            <input type="text" class="form-control" id="goalTitle" placeholder="Goal">
                                        </li>
                                    </ol>
                                </div>

                                {{!-- Milestone col --}}
                                <div class="col">
                                    <ol class="list-group">
                                        <li class="list-group-item">

                                            <p class="text-center m-0">Goal Milestones</p>

                                            <div class="ms-4 mb-2">
                                                <input class="form-check-input me-1" type="checkbox" value="" id="milestoneAccomplishedCheckbox">
                                                <label class="form-check-label" for="milestoneAccomplishedCheckbox">Accomplished</label>
                                            </div>

                                            <label for="milestoneTitle" class="form-label d-none">Goal Title</label>
                                            <input type="text" class="form-control" id="milestoneTitle" placeholder="Milestone">
                                        </li>
                                    </ol>
                                </div>

                            </div>

                        </div>

                    </form>
                </div>

            </div>

        </div>

    </div>
</div>
